<form method="post" action="/figures/<%=@figure.id%>">
  <input type="hidden" name="_method" value="patch">

  <h3>EDIT THIS FIGURE:</h3>

  <h3>Edit Name:</h3>
    <input type="text" name="figure[name]" value="<%=@figure.name %>" id="figure_name">

  <h3>Edit Title(s):</h3>
  <div>
    <% Title.all.each do |title| %>
    <!-- name + the checkbox:    value is the title.id -->
    <p><%= title.name %>
      <input type="checkbox" id="title_<%=title.id%>" name="figure[title_ids][]" value="<%=title.id%>"
      <% if @figure.title_ids.include?(title.id) %>
      checked
      <% end %>>
    </p>
    <% end %>
  </div>

  <h3>Create New Title:</h3>
      <input type="text" name="title[name]" value="" id="new_title">

  <h3>Edit Landmark(s)</h3>
  <div>
    <% Landmark.all.each do |landmark| %>
    <!-- name + the checkbox:   value is the landmark.id -->
    <p><%= landmark.name %>
      <input type="checkbox" id="landmark_<%=landmark.id%>" name="figure[landmark_ids][]" value="<%=landmark.id%>"
      <% if @figure.landmark_ids.include?(landmark.id) %>
      checked
      <% end %>>
    </p>
    <% end %>
  </div>

  <h3>Create New Landmark:</h3>
    <p>Name:</p>
      <input type="text" name="landmark[name]" id="new_landmark">
    <p>Year:</p>
      <input type="text" name="landmark[year_completed]" value="">

  <br></br>

  <input type="submit" name="" value="Edit Figure">

</form>
